<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authorisation.ForgotPasswordActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#1F1B36">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/forgot_password_blue" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_password"
        android:textColor="#EFEFEF"
        android:textSize="30sp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/ralewaybold"
        android:gravity="center"/>

    <EditText
        android:id="@+id/eMailEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/enter_email"
        android:textColorHint="#A39FAD"
        android:padding="15dp"
        android:background="@drawable/edit_text_background"
        android:drawableLeft="@drawable/sms_notification"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:drawableTint="#A39FAD"
        android:drawablePadding="8dp"
        android:fontFamily="@font/ralewayregular"/>

    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_reset_link_button"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/pink_gradient_button"
        app:backgroundTint="@null"
        android:fontFamily="@font/ralewaybold"/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_button"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/pink_gradient_button"
        android:layout_marginTop="20dp"
        app:backgroundTint="@null"
        android:fontFamily="@font/ralewaybold"/>

</LinearLayout>