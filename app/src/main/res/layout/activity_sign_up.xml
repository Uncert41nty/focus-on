<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1B36"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".authorisation.SignUpActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/logo_welcome" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ralewaybold"
        android:gravity="center"
        android:text="Create an account"
        android:textColor="#EFEFEF"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/ralewaysemibold"
            android:text="@string/email"
            android:textColor="#EFEFEF" />

        <EditText
            android:id="@+id/signUpEMail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/sms_notification"
            android:drawablePadding="7dp"
            android:drawableTint="#A39FAD"
            android:fontFamily="@font/ralewayregular"
            android:hint="example@gmail.com"
            android:padding="10dp"
            android:textColor="#EFEFEF"
            android:textColorHint="#A39FAD" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/ralewaysemibold"
            android:text="@string/phone_number"
            android:textColor="#EFEFEF" />

        <EditText
            android:id="@+id/signUpPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/mobile"
            android:drawablePadding="7dp"
            android:drawableTint="#A39FAD"
            android:fontFamily="@font/ralewayregular"
            android:hint="+7 (xxx) xxx - xx - xx"
            android:padding="10dp"
            android:textColor="#EFEFEF"
            android:textColorHint="#A39FAD" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/ralewaysemibold"
            android:text="@string/user_name"
            android:textColor="#EFEFEF" />

        <EditText
            android:id="@+id/signUpUserName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/user_square"
            android:drawablePadding="7dp"
            android:drawableTint="#A39FAD"
            android:fontFamily="@font/ralewayregular"
            android:hint="Nikita Buyanov"
            android:padding="10dp"
            android:textColor="#EFEFEF"
            android:textColorHint="#A39FAD" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/ralewaysemibold"
            android:text="@string/password"
            android:textColor="#EFEFEF" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signUpPasswordLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:errorIconDrawable="@null"
            app:errorTextColor="#EFEFEF"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:endIconDrawable="@drawable/frame_2"
            app:endIconTint="#A39FAD"
            app:endIconMode="password_toggle"
            app:startIconDrawable="@drawable/lock"
            app:startIconTint="#A39FAD">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUpPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/ralewayregular"
                android:hint="Az123456"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingEnd="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textColor="#EFEFEF"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/ralewaysemibold"
            android:text="@string/repeat_password"
            android:textColor="#EFEFEF" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/signUpRepeatPasswordLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:errorIconDrawable="@null"
            app:errorTextColor="#EFEFEF"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:endIconDrawable="@drawable/frame_2"
            app:endIconTint="#A39FAD"
            app:endIconMode="password_toggle"
            app:startIconDrawable="@drawable/lock"
            app:startIconTint="#A39FAD">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUpRepeatPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/ralewayregular"
                android:hint="Az123456"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingEnd="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textColor="#EFEFEF"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/pink_gradient_button"
        android:fontFamily="@font/ralewaysemibold"
        android:text="@string/sign_up_button"
        app:backgroundTint="@null" />

    <RelativeLayout
        android:id="@+id/logInLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/clueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ralewaysemibold"
            android:text="@string/have_account"
            android:textColor="#EFEFEF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/clueText"
            android:fontFamily="@font/ralewaysemibold"
            android:text="@string/log_in"
            android:textColor="#6256DD"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>