<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".discipline.timer.TimerActivity"
    android:gravity="center"
    android:background="#1F1B36">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/logo_activity"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/sessionCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sessions"
            android:textSize="20sp"
            android:textColor="#EFEFEF"
            android:fontFamily="@font/ralewaybold"/>
        <TextView
            android:id="@+id/countDownTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="#EFEFEF"
            android:textSize="80sp"
            android:gravity="center"
            android:fontFamily="@font/ralewaybold"/>

        <TextView
            android:id="@+id/phrasesTextView"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EFEFEF"
            android:text="We are what we waste our time on"
            android:fontFamily="@font/ralewaysemibold"
            android:gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/breakTimeBetweenSessions"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Break time"
            android:textColor="#EFEFEF"
            android:fontFamily="@font/ralewaysemibold"
            android:gravity="center"
            android:textSize="15sp"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="50dp">
        <Button
            android:id="@+id/sessionQuitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quit"
            android:fontFamily="@font/ralewaybold"
            app:backgroundTint="@null"
            android:background="@drawable/pink_gradient_button"/>
        <Button
            android:id="@+id/sessionPauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pause"
            android:fontFamily="@font/ralewaybold"
            android:layout_alignParentRight="true"
            android:background="@drawable/pink_gradient_button"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/continueSessionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resume"
            android:visibility="gone"
            android:background="@drawable/pink_gradient_button"
            app:backgroundTint="@null"/>
    </RelativeLayout>


</LinearLayout>