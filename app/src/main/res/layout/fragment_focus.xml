<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".discipline.timer.FocusFragment"
    android:background="#1F1B36">

        <LinearLayout
            android:id="@+id/focusLinerLayout"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/mainFocusLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="30dp">

                <LinearLayout
                    android:id="@+id/focusProgressLinearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/blue_gradient"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your progress"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yesterday: success sessions - " />

                            <TextView
                                android:id="@+id/successSessionsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=", broken sessions - "/>

                            <TextView
                                android:id="@+id/brokenSessionsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today's goal: continue plan of  "/>
                        <TextView
                            android:id="@+id/goalSessionsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" success sessions"/>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/focusTimeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00:00:00"
                        android:gravity="end"
                        android:textColor="#EFEFEF"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set focus time"
                        android:textColor="#EFEFEF"/>

                </RelativeLayout>


                <SeekBar
                    android:layout_marginTop="10dp"
                    android:id="@+id/focusTimeSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/breakTimeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00:00:00"
                        android:gravity="end"
                        android:textColor="#EFEFEF"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set break time"
                        android:textColor="#EFEFEF"/>

                </RelativeLayout>

                <SeekBar
                    android:id="@+id/breakTimeSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sessions count"
                        android:layout_centerVertical="true"
                        android:textColor="#EFEFEF"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true">

                        <Button
                            android:id="@+id/sessionMinusButton"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_marginRight="10dp"
                            />

                        <TextView
                            android:id="@+id/sessionsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="#EFEFEF"/>

                        <Button
                            android:id="@+id/sessionPlusButton"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:layout_marginLeft="10dp"
                            />

                    </LinearLayout>

                </RelativeLayout>

                <Button
                    android:id="@+id/sessionsStartButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:text="START"
                    android:background="@drawable/edit_text_background"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/breakLinerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Break time left"
                            android:layout_centerVertical="true"
                            android:textColor="#EFEFEF"/>

                        <TextView
                            android:id="@+id/breakTimeCountDownTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00:00:00"
                            android:textSize="30sp"
                            android:gravity="end"
                            android:textColor="#EFEFEF"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time you need to focus on the next session"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/sessionTimeInfoTextView"
                            android:textColor="#EFEFEF"/>

                        <TextView
                            android:id="@+id/sessionTimeInfoTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00:00"
                            android:textSize="30sp"
                            android:layout_alignParentRight="true"
                            android:textColor="#EFEFEF"/>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="80dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/quitBreakButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quit"
                            android:layout_toLeftOf="@id/startNextSessionButton"
                            android:layout_marginRight="100dp"/>

                        <Button
                            android:id="@+id/startNextSessionButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Continue"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



</FrameLayout>