<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile.ProfileFragment"
    android:background="#1F1B36">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/logo_activity"/>

        <TextView
            android:id="@+id/profileUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textColor="#EFEFEF"
            android:textSize="30sp"
            android:fontFamily="@font/ralewaybold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:padding="15dp"
            android:background="@drawable/blue_gradient">

            <RelativeLayout
                android:id="@+id/changePasswordLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <ImageView
                    android:id="@+id/changePasswordIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/lock_circle"
                    />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password_layout"
                    android:layout_toRightOf="@id/changePasswordIcon"
                    android:layout_marginLeft="7dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/ralewaysemibold"/>
                
            </RelativeLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:id="@+id/changeAppLanguageLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/changeLanguageIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/translate"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_language_layout"
                    android:layout_toRightOf="@id/changeLanguageIcon"
                    android:layout_marginLeft="7dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/ralewaysemibold"/>

            </RelativeLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:id="@+id/aboutLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/aboutIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/people"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_layout"
                    android:layout_toRightOf="@id/aboutIcon"
                    android:layout_marginLeft="7dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/ralewaysemibold"/>

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/signOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_out_button"
            android:background="@drawable/pink_gradient_button"
            android:layout_margin="50dp"
            app:backgroundTint="@null"
            android:fontFamily="@font/ralewaybold"/>

    </LinearLayout>



</FrameLayout>